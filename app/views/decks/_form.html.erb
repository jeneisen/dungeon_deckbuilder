<%= form_for(@deck) do |f| %>
  <% if @deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

      <ul>
      <% @deck.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

<%@deck.cards.each do |card|%> 

  <div class="field">
    <%=label_tag 'cards[][name]', 'Card Name'%>
    <%=text_field_tag 'cards[][name]', card.name %>
    <%=label_tag 'cards[][strength]', 'Card Strength'%>
    <%=text_field_tag 'cards[][strength]', card.strength %>
  </div>
  <%end%>


  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
